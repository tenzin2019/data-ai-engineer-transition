# RAG Conversational AI Assistant - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=RAG Conversational AI Assistant
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Local PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/rag_assistant

# Azure Database for PostgreSQL
# DATABASE_URL=postgresql://username:password@your-server.postgres.database.azure.com:5432/rag_assistant?sslmode=require

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Local Redis
REDIS_URL=redis://localhost:6379/0

# Azure Cache for Redis
# REDIS_URL=rediss://your-cache.redis.cache.windows.net:6380/0?password=your-password&ssl=True

REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
VECTOR_DB_TYPE=pinecone  # pinecone, weaviate, chroma, azure_search

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=rag-assistant

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key

# Chroma Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_API_KEY=your_search_api_key
AZURE_SEARCH_INDEX_NAME=rag-documents

# =============================================================================
# AI/ML MODEL CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key

# =============================================================================
# EMBEDDING MODEL CONFIGURATION
# =============================================================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
BCRYPT_ROUNDS=12

# Azure Key Vault Configuration
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_TENANT_ID=your_tenant_id

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,docx,txt,md,html
UPLOAD_DIRECTORY=./uploads

# Azure Blob Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account
AZURE_STORAGE_ACCOUNT_KEY=your_storage_key
AZURE_STORAGE_CONTAINER_NAME=documents
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces
LOG_FORMAT=json

# Azure Application Insights
APPLICATION_INSIGHTS_CONNECTION_STRING=your_application_insights_connection_string

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# =============================================================================
# MLFLOW CONFIGURATION
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=rag-assistant

# =============================================================================
# WEIGHTS & BIASES CONFIGURATION
# =============================================================================
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=rag-assistant

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_DRIFT_DETECTION=true
ENABLE_HUMAN_FEEDBACK=true
ENABLE_A_B_TESTING=true
ENABLE_MULTIMODAL=true
ENABLE_CACHING=true
ENABLE_AZURE_SERVICES=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
QUERY_TIMEOUT=30
EMBEDDING_TIMEOUT=60
GENERATION_TIMEOUT=120

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
RELOAD_ON_CHANGE=true
PROFILING_ENABLED=false
DEBUG_TOOLBAR=false

# =============================================================================
# AZURE SPECIFIC CONFIGURATION
# =============================================================================
# Azure Resource Group
AZURE_RESOURCE_GROUP=rag-assistant-rg
AZURE_LOCATION=eastus

# Azure App Service
AZURE_APP_SERVICE_PLAN=rag-assistant-plan
AZURE_WEB_APP_NAME=rag-assistant-api
AZURE_FUNCTION_APP_NAME=rag-assistant-functions

# Azure SignalR
AZURE_SIGNALR_CONNECTION_STRING=your_signalr_connection_string

# Azure API Management
AZURE_API_MANAGEMENT_NAME=rag-assistant-apim
AZURE_API_MANAGEMENT_RESOURCE_GROUP=rag-assistant-rg
